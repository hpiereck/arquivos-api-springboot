<configuration>

    <!-- Appender exclusivo para logs personalizados -->
    <appender name="CUSTOM_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/custom.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/custom.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
    </appender>

    <!-- Appender padrão do console (opcional) -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger (geral do Spring e bibliotecas) — não grava no CUSTOM_FILE -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>

    <!-- Logger só para seus logs formatados -->
    <logger name="LOG_PERSONALIZADO" level="INFO" additivity="false">
        <appender-ref ref="CUSTOM_FILE"/>
    </logger>

</configuration>